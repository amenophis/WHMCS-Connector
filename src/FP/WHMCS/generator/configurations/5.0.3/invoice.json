{
  "className": "Invoice",
  "actions": {
    "get": {
      "findOne": {
        "action":"getinvoice",
        "identifier":"invoiceid"
      },
      "find":{
        "action":"getinvoices",
        "options":["userid", "status", "limitstart", "limitnum"],
        "parentNodes":["invoices", "invoice"]
      }
    },
    "update":"updateinvoice",
    "create":"createinvoice"
  },
  "fields": {
    "invoiceid": {"as":"InvoiceId", "type":"numeric"},
    "invoicenum": {"as":"InvoiceNumber","type":"numeric"},
    "userid": {"as":"UserId","type":"numeric"},
    "date": {"as":"Date","type":"date"},
    "duedate": {"as":"DueDate","type":"date"},
    "datepaid": {"as":"DatePaid","type":"datetime"},
    "subtotal": {"as":"SubTotal","type":"numeric"},
    "credit": {"as":"Credit","type":"numeric"},
    "tax": {"as":"Tax","type":"numeric"},
    "tax2": {"as":"Tax2","type":"numeric"},
    "total": {"as":"Total","type":"numeric"},
    "taxrate": {"as":"TaxRate","type":"numeric"},
    "status": {"as":"Status","type":"enum", "options":["Paid", "Pending", "Overdue"]},
    "paymentmethod": {"as":"PaymentMethod","type":"text"},
    "notes": {"as":"Notes","type":"text"},
    "items": {"as":"Items","type":"list", "of":"InvoiceItem", "index":"item", "as2":"Item" }
  }
}
